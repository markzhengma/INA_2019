{
  "manifest_version": 2,
  "name": "pdf-detector",
  "description": "detect pdf and html...",
  "version": "1.0",
  "browser_action": {},
  "permissions": ["tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.gstatic.com/ https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'"
}
